<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Painarea">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        tools:context=".Painarea">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:shadowColor="@color/onPrimary"
            android:text="Select your pain area"
            android:textSize="25dp"
            android:shadowDx="2"
            android:shadowDy="0"
            android:shadowRadius="2"
            />
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:padding="8dp"
        android:layout_marginTop="15dp">
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:scaleType="centerCrop"
            android:background="@drawable/linear_layout_border"
            android:layout_margin="10dp"
            android:src="@drawable/anklee"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:scaleType="centerCrop"
            android:background="@drawable/linear_layout_border"
            android:layout_margin="10dp"
            android:src="@drawable/armm"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:scaleType="centerCrop"
            android:background="@drawable/linear_layout_border"
            android:layout_margin="10dp"
            android:src="@drawable/backk"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:scaleType="centerCrop"
            android:background="@drawable/linear_layout_border"
            android:layout_margin="10dp"
            app:srcCompat="@mipmap/balance_foreground"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:scaleType="centerCrop"
            android:background="@drawable/linear_layout_border"
            android:layout_margin="10dp"
            app:srcCompat="@mipmap/chest_foreground"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:scaleType="centerCrop"
            android:background="@drawable/linear_layout_border"
            android:layout_margin="10dp"
            android:src="@drawable/knee"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:scaleType="centerCrop"
            android:background="@drawable/linear_layout_border"
            android:layout_margin="10dp"
            app:srcCompat="@mipmap/hips_foreground"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:scaleType="centerCrop"
            android:background="@drawable/linear_layout_border"
            android:layout_margin="10dp"
            android:src="@drawable/anklee"/>

    </GridLayout>
    </LinearLayout>

</ScrollView>